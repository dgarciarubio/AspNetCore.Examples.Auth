{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Bearer": {
      "Authority": "https://login.microsoftonline.com/{TENANT_ID}/v2.0",
      "Audience": "{API_APP_ID}"
    }
  },
  "OpenApi": {
    "SecuritySchemes": {
      "OAuth2": {
        "Flows": {
          "AuthorizationCode": {
            "DiscoveryDocumentRequest": {
              "Address": "https://login.microsoftonline.com/{TENANT_ID}/v2.0/.well-known/openid-configuration",
              "Policy": {
                "ValidateEndpoints": false
              }
            },
            "Scopes": {
              "api": {
                "Value": "https://{TENANT_NAME}.onmicrosoft.com/{API_APP_ID}/{API_SCOPE}",
                "Description": ""
              }
            }
          }
        }
      }
    },
    "SecurityRequirements": {
      "OAuth2:OAuth2": {
        "Scopes": [ "https://{TENANT_NAME}.onmicrosoft.com/{API_APP_ID}/{API_SCOPE}" ]
      }
    },
    "SwaggerUI": {
      "OAuthConfigObject": {
        "ClientId": "{CLIENT_APP_ID}",
        "ScopeSeparator": " ",
        "UsePkceWithAuthorizationCodeGrant": true,
        "Scopes": [ "https://{TENANT_NAME}.onmicrosoft.com/{API_APP_ID}/{API_SCOPE}" ]
      }
    },
    "Scalar": {
      "Authentication": {
        "OAuth2": {
          "ClientId": "{CLIENT_APP_ID}",
          "Scopes": [ "https://{TENANT_NAME}.onmicrosoft.com/{API_APP_ID}/{API_SCOPE}" ]
        }
      }
    }
  }
}

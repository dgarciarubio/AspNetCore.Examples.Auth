{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Bearer": {
      "Authority": "https://demo.duendesoftware.com",
      "Audience": "api"
    }
  },
  "OpenApi": {
    "SwaggerUI": {
      "ConfigObject": {
        "Urls": [
          {
            "Name": "V1",
            "Url": "/openapi/v1.json"
          }
        ]
      },
      "OAuthConfigObject": {
        "ClientId": "interactive.public",
        "ScopeSeparator": " ",
        "UsePkceWithAuthorizationCodeGrant": true,
        "Scopes": [ "api" ]
      }
    },
    "Scalar": {
      // Does not yet fully support OAuth 
      "Authentication": {
        "OAuth2": {
          "ClientId": "interactive.public",
          "Scopes": [ "api" ]
        }
      }
    }
  }
}
